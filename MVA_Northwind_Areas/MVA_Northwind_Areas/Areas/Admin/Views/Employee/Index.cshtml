
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
    <style>
        body {
            background: linear-gradient(#1A1A40 15%, #000000 80%, #808080 5%)
        }
    </style>
</head>
<body>
    <div class="row" style="margin-top:20px;">


        <div class="col-xl-3 col-md-2">
            <div class="card bg-dark text-white mb-4">
                <div class="card-body">Mevcut Tedarikçi Sayısı</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <p>@TempData["SupplierSayısı"]</p>
                    <p>@Html.ActionLink("Suppliers", "Index", "Supplier")</p>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-2">
            <div class="card bg-dark text-white mb-4">
                <div class="card-body">Mevcut Sipariş Sayısı</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <p>@TempData["OrderSayısı"]</p>
                    <p>@Html.ActionLink("OrderDetails", "Index", "OrderDetails")</p>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-2">
            <div class="card bg-dark text-white mb-4">
                <div class="card-body">Mevcut Çalışan Sayısı</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <p>@TempData["EmployeeSayısı"]</p>
                    <p>@Html.ActionLink("Employees","Index","Employee")</p>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>

        <div class=" col-md-6">
            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                        <th scope="col">EmployeeId</th>
                        <th scope="col">FirstName</th>
                        <th scope="col">LastName</th>
                        <th scope="col">HiredDate</th>
                        <th scope="col">City</th>
                        <th scope="col">Title</th>

                    </tr>
                </thead>
                @foreach (var employee in TempData["Employee"] as List<MVA_Northwind_Areas.Models.Employee>)
                {
                    <tbody>
                        <tr>

                            <td>@employee.EmployeeID</td>
                            <td>@employee.FirstName</td>
                            <td>@employee.LastName</td>
                            <td>@employee.HireDate</td>
                            <td>@employee.City</td>
                            <td>@employee.Title</td>
                        </tr>

                    </tbody>
                }
            </table>
        </div>




    </div>
</body>
</html>


