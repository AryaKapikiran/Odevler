
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<html>
<head>
    <style>
        body {
            background: linear-gradient(#1A1A40 15%, #000000 80%, #808080 5%)
        }
    </style>
</head>
<body>
    <div class="row" style="margin-top:20px;">


        <div class="col-xl-3 col-md-2">
            <div class="card bg-dark text-white mb-4">
                <div class="card-body">Mevcut Tedarikçi Sayısı</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <p>@TempData["SupplierSayısı"]</p>
                    <p>@Html.ActionLink("Suppliers", "Index", "Supplier")</p>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-2">
            <div class="card bg-dark text-white mb-4">
                <div class="card-body">Mevcut Sipariş Sayısı</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <p>@TempData["OrderSayısı"]</p>
                    <p>@Html.ActionLink("OrderDetails", "Index", "OrderDetails")</p>

                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-2">
            <div class="card bg-dark text-white mb-4">
                <div class="card-body">Mevcut Çalışan Sayısı</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <p>@TempData["EmployeeSayısı"]</p>
                    <p>@Html.ActionLink("Employees", "Index", "Employee")</p>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>

        <div class=" col-md-6">
            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                        <th scope="col">SupplierId</th>
                        <th scope="col">CompanyName</th>
                        <th scope="col">ContactName</th>
                        <th scope="col">ContactTitle</th>
                        <th scope="col">City</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Adress</th>
                        <th scope="col">Country</th>


                    </tr>
                </thead>
                @foreach (var supplier in TempData["Suppliers"] as List<MVA_Northwind_Areas.Models.Supplier>)
                {
                    <tbody>
                        <tr>

                            <td>@supplier.SupplierID</td>
                            <td>@supplier.CompanyName</td>
                            <td>@supplier.ContactName</td>
                            <td>@supplier.ContactTitle</td>
                            <td>@supplier.City</td>
                            <td>@supplier.Phone</td>
                            <td>@supplier.Address</td>
                            <td>@supplier.Country</td>

                        </tr>

                    </tbody>
                }
            </table>
        </div>




    </div>
</body>
</html>