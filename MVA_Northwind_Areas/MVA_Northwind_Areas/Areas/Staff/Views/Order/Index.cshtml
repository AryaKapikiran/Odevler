
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <style>
        body {
            background: linear-gradient(#1A1A40 15%, #000000 80%, #808080 5%)
        }
    </style>
</head>
<body>
    <div class="row" style="margin-top:20px;">


        <div class="col-xl-3 col-md-2">
            <div class="card bg-dark text-white mb-4">
                <div class="card-body">Mevcut Müşteri Sayısı</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <p>@TempData["CustomerSayısı"]</p>
                    <p>@Html.ActionLink("Customers", "Index", "Customer")</p>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-2">
            <div class="card bg-dark text-white mb-4">
                <div class="card-body">Mevcut Sipariş Sayısı</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <p>@TempData["OrderSayısı"]</p>
                    <p>@Html.ActionLink("OrderDetails", "Index", "Order")</p>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-2">
            <div class="card bg-dark text-white mb-4">
                <div class="card-body">Mevcut Shipper Sayısı</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <p>@TempData["ShipperSayısı"]</p>
                    <p>@Html.ActionLink("Shippers", "Index", "Shipper")</p>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>

        <div class=" col-md-6">
            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                        <th scope="col">OrderId</th>
                        <th scope="col">OrderDate</th>
                        <th scope="col">CustomerId</th>
                        <th scope="col">Freight</th>
                        <th scope="col">ShipAdress</th>
                        <th scope="col">ShipCity</th>

                    </tr>
                </thead>
                @foreach (var order in TempData["Orders"] as List<MVA_Northwind_Areas.Models.Order>)
                {
                    <tbody>
                        <tr>

                            <td>@order.OrderID</td>
                            <td>@order.OrderDate</td>
                            <td>@order.CustomerID</td>
                            <td>@order.Freight</td>
                            <td>@order.ShipAddress</td>
                            <td>@order.ShipCity</td>
                        </tr>

                    </tbody>
                }
            </table>
        </div>




    </div>
</body>
</html>

